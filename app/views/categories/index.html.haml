%h2 Categorias

=link_to "Adicionar", new_category_path, :class => "btn btn-success"

%table{:class => "table table-striped"}
  %thead
    %th Nome
    %th Ação
  %tbody
    - @categories.each do |category|
      %tr
        %td= link_to category.name, category_path(category)
        %td= link_to 'Apagar', category_path(category), :method => :delete
