%h2 Usuários

%table
  %thead
    %th Nome
    %th Email
    %th Instituição
    %th Perfil
    %th Liberado
    %th Ação
  %tbody
    - @users.each do |user|
      %tr
        %td= link_to user.name, edit_user_path(user)
        %td= link_to user.email, edit_user_path(user)
        %td= user.institution.name if user.institution
        %td= user.roles
        - if user.confirmation_sent_at
          %td Sim
        - else
          %td Não
        %td= link_to 'Liberar', confirm_url(user)
