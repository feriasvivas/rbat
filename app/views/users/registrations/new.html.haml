%h2 Registro
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    = f.label :name
    %br
    = f.text_field :name, autofocus: true
  .field
    = f.label :email
    %br
    = f.email_field :email
  .field
    = f.label :institution
    %br
    = f.select :institution_id, options_from_collection_for_select(@institutions, 'id', 'name')
  .field
    = f.label :roles, 'Perfil'
    = radio_button_tag :roles, :researcher
    Pesquisador
    = radio_button_tag :roles, :supervisor
    Supervisor



  .field
    = f.label :password, "Senha"
    - if @minimum_password_length
      %em
        (no mínimo #{@minimum_password_length} caracteres)
    %br
    = f.password_field :password, autocomplete: "off"
  .field
    = f.label :password_confirmation, "Confirmação da senha"
    %br
    = f.password_field :password_confirmation, autocomplete: "off"
  .actions
    = f.submit "Enviar"
= render "users/shared/links"
