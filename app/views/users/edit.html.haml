%h2 Atualizar usuário

=form_tag user_path(@user), :method => :put do
  = label :user, :name, 'Nome'
  = text_field :user, :name

  = label :user, :email, 'e-mail'
  = text_field :user, :email

  = label :user, :institution_id, 'Instituição'
  = select :user, :institution_id, options_from_collection_for_select(@institutions, 'id', 'name', @user.institution_id)

  = label :user, :roles, 'Perfil'
  = radio_button_tag :roles, :researcher, @user.is_researcher?
  Pesquisador
  = radio_button_tag :roles, :supervisor, @user.is_supervisor?
  Supervisor
  = radio_button_tag :roles, :admin, @user.is_admin?
  Administrador

  = submit_tag 'Salvar'
  = link_to 'Excluir', user_path(@user), :method => :delete
